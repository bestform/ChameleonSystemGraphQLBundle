<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="ChameleonSystem\GraphQLBundle\Resolver\ChameleonResolver"
                 class="ChameleonSystem\GraphQLBundle\Resolver\ChameleonResolver">

        </service>
        <service id="ChameleonSystem\GraphQLBundle\Generator\Schema"
                 class="ChameleonSystem\GraphQLBundle\Generator\Schema">
            <argument type="service" id="database_connection" />
        </service>
        <service id="ChameleonSystem\GraphQLBundle\Command\GenerateSchemaCommand" class="ChameleonSystem\GraphQLBundle\Command\GenerateSchemaCommand">
            <argument type="service" id="ChameleonSystem\GraphQLBundle\Generator\Schema" />
            <tag name="console.command" />
        </service>
    </services>
</container>

